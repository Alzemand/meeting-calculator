<!DOCTYPE html>
<html>
<head>
  <title>Calculadora de custo da reunião</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    .card-center {
      margin: 0 auto;
      max-width: 400px;
      margin-top: 100px;
      margin-bottom: 100px;
    }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-lg" style="background-color: #494b83;">
    <div class="container">
      <a class="navbar-brand text-white"><b>Calculadora de Custo</b></a>
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link text-white active" aria-current="page" href="#" onclick="mostrarPagina1()">Calculadora</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" onclick="mostrarPagina2()" href="#">Funções</a>
        </li>
      </ul>
    </div>
  </nav>


  <div class="container">
    <div class="row justify-content-center">
      <div class="col">
        <div id="page1">
          <div class="card card-center">
            <div class="card-body">
              <h1 class="card-title text-center">Calculadora de Custo por Segundo</h1>
              
              <div class="mb-3">
                <select id="valoresPorHora" multiple class="form-select"></select>
                <button onclick="adicionarValor()" class="btn btn-primary">Adicionar Valor</button>
                <button onclick="removerValor()" class="btn btn-danger">Remover Valor</button>
              </div>
              
              <div class="mb-3">
                <button onclick="startCalculo()" class="btn btn-success">Calcular</button>
                <button onclick="pausarRetomarCalculo()" class="btn btn-warning">Pausar/Retomar</button>
                <button onclick="pararCalculo()" class="btn btn-secondary">Parar</button>
              </div>
              
              <h2 id="resultado" class="text-center">Custo acumulado: R$ 0.00</h2>
              
              <div class="text-center mt-3">
                <a href="#page2" onclick="mostrarPagina2()" class="btn btn-primary">Ir para a segunda página</a>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Pagina 2 -->
        <div id="page2" style="display: none;">
          <div class="card card-center">
            <div class="card-body">
              <h1 class="card-title text-center">Segunda Página</h1>
              <h2 class="text-center mb-4">Informe o nome e o valor</h2>
              
              <form onsubmit="event.preventDefault(); adicionarNomeValor();">
                <div class="mb-3">
                  <label for="nomeInput" class="form-label">Nome:</label>
                  <input type="text" class="form-control" id="nomeInput" placeholder="Digite o nome" required>
                </div>
                
                <div class="mb-3">
                  <label for="valorInput" class="form-label">Valor:</label>
                  <input type="number" class="form-control" id="valorInput" placeholder="Digite o valor" required>
                </div>
                
                <div class="text-center">
                  <button type="submit" class="btn btn-success">Adicionar</button>
                  <button onclick="mostrarPagina1()" class="btn btn-primary">Voltar</button>
                </div>
              </form>
              
              <hr>
              
              <h2 class="text-center mb-3">Valores Adicionados:</h2>
              
              <ul id="valoresAdicionados" class="list-group"></ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
